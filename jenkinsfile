pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    tools {
        nodejs '23.11.0'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch:'main',url:'https://github.com/manshachopra/newtourbackend.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Start Server') {
            steps {
                bat 'node index.js'
            }
        }
    }
        post {
        success {
            echo "Build Succeeded: Pipeline complete."
        }
        failure {
            echo "Build Failed: check errors"
        }
    }
}